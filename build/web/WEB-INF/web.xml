<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!--SERVLET-->
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>control.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>control.ClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FuncionarioServlet</servlet-name>
        <servlet-class>control.FuncionarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>control.MenuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PerfilServlet</servlet-name>
        <servlet-class>control.PerfilServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SegurancaServlet</servlet-name>
        <servlet-class>control.SegurancaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InstalacaoServlet</servlet-name>
        <servlet-class>control.InstalacaoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutoServlet</servlet-name>
        <servlet-class>control.ProdutoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/pages/gerenciar_usuario.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/pages/gerenciar_cliente.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FuncionarioServlet</servlet-name>
        <url-pattern>/pages/gerenciar_funcionario.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/pages/gerenciar_menu.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PerfilServlet</servlet-name>
        <url-pattern>/pages/gerenciar_perfil.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SegurancaServlet</servlet-name>
        <url-pattern>/pages/gerenciar_seguranca.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstalacaoServlet</servlet-name>
        <url-pattern>/pages/gerenciar_instalacao.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoServlet</servlet-name>
        <url-pattern>/pages/gerenciar_produto.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            1480
        </session-timeout>
    </session-config>
</web-app>
